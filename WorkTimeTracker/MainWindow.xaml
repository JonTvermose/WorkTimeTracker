<Window x:Class="WorkTimeTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WorkTimeTracker"
        mc:Ignorable="d"
        Title="Work Time Tracker" Height="270" Width="300"
        DataContext="{RelativeSource Self}">
    <Grid>

        <Label Content="Today:" HorizontalAlignment="Left" Margin="30,80,0,0" VerticalAlignment="Top"/>
        <Label Content="{Binding Path=TodayTime}" HorizontalAlignment="Left" Margin="150,70,0,0" VerticalAlignment="Top" FontSize="24" Foreground="Green" FontWeight="Bold"/>

        <Label Content="This week total:" HorizontalAlignment="Left" Margin="30,130,0,0" VerticalAlignment="Top"/>
        <Label Content="{Binding Path=ThisWeekTotalTime}" HorizontalAlignment="Left" Margin="150,120,0,0" VerticalAlignment="Top" FontSize="24" Foreground="Green" FontWeight="Bold"/>

        <Label Content="This week remaining:" HorizontalAlignment="Left" Margin="30,180,0,0" VerticalAlignment="Top"/>
        <Label Content="{Binding Path=ThisWeekRemainingTime}" HorizontalAlignment="Left" Margin="150,170,0,0" VerticalAlignment="Top" FontSize="24" Foreground="Green" FontWeight="Bold"/>
    </Grid>
</Window>
